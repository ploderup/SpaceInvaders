// Includes
//#pragma once
#include <stdio.h>
#include "platform.h"
#include "render.h"

int main() {
	init_platform();                   // Necessary for all programs.
	render_initScreen();
	char input;

	xil_printf("Welcome to Space Invaders [Demo]!\r\n");
	xil_printf("Options:\r\n");
	while(1) {
		xil_printf("Character: %c\r\n", input);
		input = getchar();
		render_drawAll(input);
	}
	cleanup_platform();

    return 0;
}


